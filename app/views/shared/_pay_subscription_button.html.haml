.row
  .container
    .col-xs-12.col-sm-offset-4.col-sm-4
      - if logged_in? && current_user.is_paid_member?
        %h5= t ".you_are_already_a_paid_member"
        = link_to courses_path do
          .btn.btn-primary 上課
      - elsif logged_in? && !current_user.is_paid_member? 
        = form_tag subscribers_path do
          %article
            - if flash[:error].present?
              #error_explanation
                %p= flash[:error]
            %label.amount.center
              %h3{style: "text-decoration: line-through"}= t ".course_fee"
              %h3= t ".special_discount"

              - if @affiliate_link
                %h3= "課程費: $#{@affiliate_link.data_amount.to_i/100} NTD / 月"
              - else
                %h3= t ".course_fee_after_discount"

          - if @affiliate_link
            %script.stripe-button{"data-alipay" => "true", "data-amount" => @affiliate_link.data_amount.to_i, "data-currency" => @affiliate_link.data_currency, "data-description" => @affiliate_link.data_description, "data-key" => Rails.configuration.stripe[:publishable_key], "data-label" => "Upgrade", "data-locale" => "auto", :src => "https://checkout.stripe.com/checkout.js"}
          - else
            %script.stripe-button{"data-alipay" => "true", "data-amount" => "75000", "data-currency" => "ntd", "data-description" => "英文學校課程費用", "data-key" => Rails.configuration.stripe[:publishable_key], "data-label" => "Upgrade", "data-locale" => "auto", :src => "https://checkout.stripe.com/checkout.js"}

          %p.center= t ".membership_features"
          %p.center= t ".monthly_billing"
          -# # %p= t (".alterntaive_payment") + ENV['ADMIN_EMAIL']

      - else
        .row
          .col-xs-12.col-xs-offset-4.col-sm-offset-2
            = link_to sign_up_path do
              .btn.btn-lg.btn-primary= t ".sign_up"
            %br/
            %br/
