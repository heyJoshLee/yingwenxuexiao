%h1 Word search Game
%small#howToPlayLauncher{"data-target" => "#howToPlay", "data-toggle" => "modal", :type => "button"} 
  %p How to play <i class="glyphicon glyphicon-info-sign" style="margin-left: 10px"></i>
  
.row
  .container
    .col-xs-10
      #puzzle
    .col-xs-2
      #words
.row
  .container
    %br/
    %button#solve.btn.btn-warning Show Answers
    #refresh_page.btn.btn-primary Play Again

    -word_bank = current_user.random_vocabulary_words(20).map(&:main).join(",")
:javascript
  $("#refresh_page").on("click", function(e) {
    var play_again = confirm("Do you want to reset and play again?");
    if (play_again) { 
    window.location.reload();
    }
   });

  var array_as_string = "#{word_bank}";
  console.log("array_as_strign")
  console.log(array_as_string)
  var words = array_as_string.split(",");
  console.log(words)
  
  var gamePuzzle = wordfindgame.create(words, '#puzzle', '#words');

  $('#solve').click( function() {
    wordfindgame.solve(gamePuzzle, words);
  });



