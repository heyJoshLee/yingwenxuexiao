.container
  .row
    .col-sm-8.col-sm-offset-2
      %h1= @course.name
      = image_tag(@course.main_image_url)
      %h2= @course.description
    .col-sm-2.text-center
      %h5 Add lesson to this course
      .add_lesson_button
        = link_to new_admin_course_lesson_path(@course) do
          %i.fa.fa-plus
  .row
    %h2 Lessons
  .row
    - @course.lessons.each do |lesson|
      = lesson.name