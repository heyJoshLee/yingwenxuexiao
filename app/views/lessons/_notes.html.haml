- if @lesson.vocabulary_words.count != 0
  - if current_user.is_paid_member?
    = link_to course_lesson_path(@course, @lesson, format: "pdf") do
      .btn.btn-primary.btn-block.btn-lg= t "download_notes"
  - else
    .btn.btn-primary.btn-block.btn-lg= t "download_notes" 
    %h4{style: "color: red; text-align: center;"}= t "free_users_cannot_download_notes"

  -if current_user.is_admin?
    %br/
    = link_to course_lesson_path(@course, @lesson, format: "pdf", admin: true) do
      .btn.btn-primary Admin Notes
%br/
